cpu affinity:

		struct timeval tv;
		struct timespec tp;
		uint64_t s, e, v, a, ac, as, ar, arf, at, am, amf, amt;
		uint64_t i, r;

#ifdef __linux__
		cpu_set_t f;

		CPU_ZERO(&f);
		CPU_SET(1, &f);
		sched_setaffinity(gettid(), sizeof(f), &f);
#elif defined(__osx__)
		thread_affinity_policy_data_t policy;

		policy.affinity_tag = 0;
		thread_policy_set(mach_thread_self(),
						  THREAD_AFFINITY_POLICY,
						  (thread_policy_t)&policy,
						  THREAD_AFFINITY_POLICY_COUNT);
#endif
